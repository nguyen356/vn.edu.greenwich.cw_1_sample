<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resident.ResidentRegisterFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fmResidentRegisterLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/fmResidentRegisterError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Discordblack"
                android:textSize="11sp"
                app:lineHeight="20dp" />

            <EditText
                android:id="@+id/fmResidentRegisterName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Name Of Trip"
                android:inputType="textPersonName"
                android:textColor="@color/Discordblack"
                android:textColorHint="@color/Discordblack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterDestination"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Destination"
                android:inputType="textPersonName"
                android:textColor="@color/Discordblack"
                android:textColorHint="@color/Discordblack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterDiscription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName"
                android:textColor="@color/Discordblack"
                android:textColorHint="@color/Discordblack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterOther"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Other notes"
                android:inputType="textPersonName"
                android:textColor="@color/Discordblack"
                android:textColorHint="@color/Discordblack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterStartDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/label_start_date"
                android:inputType="date"
                android:textColor="@color/Discordblack"
                android:textColorHint="@color/Discordblack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fmResidentRegisterEndDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Total days"
                android:inputType="date"
                android:textColor="@color/Discordblack"
                android:textColorHint="@color/Discordblack"
                android:textSize="15sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/fmResidentRegisterOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="20dp"
                android:text="Requires Risk Assessmen"
                android:textColor="@color/Discordblack"
                android:textColorHint="@color/Discordblack"
                android:textSize="15sp" />

            <Button
                android:id="@+id/fmResidentRegisterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btnshape"
                android:text="Create Trip"
                android:textColor="@color/Discordblack" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>
